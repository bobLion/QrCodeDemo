<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/selectbt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="32dp"
        android:text="Select" />

    <Button
        android:id="@+id/insertbt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/selectbt"
        android:layout_alignRight="@+id/selectbt"
        android:layout_below="@+id/selectbt"
        android:text="Insert" />

    <TextView
        android:id="@+id/text_View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/insertbt"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/insertbt"
        android:layout_below="@+id/insertbt"
        android:layout_marginTop="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>